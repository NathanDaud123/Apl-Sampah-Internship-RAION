<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kremHalus"
    tools:context=".UbahProfilePage">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins"
        android:text="Ubah Profil"
        android:textColor="@color/PrimaryGreen"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/kremHalus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"
        app:tint="@color/PrimaryGreen" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="137dp"
        android:layout_height="126dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:srcCompat="@drawable/ellipse_80" />

    <ImageView
        android:id="@+id/imageView84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.628"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_ganti_foto" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cons_bawah"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cons_tengah">

            <TextView
                android:id="@+id/NamaLengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Nama Lengkap"
                android:textColor="@color/baseblack"
                android:textStyle="bold"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_3574"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NamaLengkap"
                android:layout_marginTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit1"
                android:text="Anda Bagas Aprianto"
                android:textSize="14dp"
                android:textColor="@color/baseblack"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toTopOf="@id/image1"
                app:layout_constraintStart_toStartOf="@id/image1"
                android:backgroundTint="@color/white"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/baseblack"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/image1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_3574"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/username"
                android:layout_marginTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit2"
                android:text="Bagas21"
                android:textSize="14dp"
                android:textColor="@color/baseblack"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toTopOf="@id/image2"
                app:layout_constraintStart_toStartOf="@id/image2"
                android:backgroundTint="@color/white"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/JenisKelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textColor="@color/baseblack"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/image2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_3574"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/JenisKelamin"
                android:layout_marginTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit3"
                android:text="Laki-Laki"
                android:textSize="14dp"
                android:textColor="@color/baseblack"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toTopOf="@id/image3"
                app:layout_constraintStart_toStartOf="@id/image3"
                android:backgroundTint="@color/white"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Pilihan1"
                android:src="@drawable/rectangle_3585"
                app:layout_constraintTop_toTopOf="@id/image3"
                app:layout_constraintEnd_toEndOf="@id/image3"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ceklisBawah1"
                android:src="@drawable/dow"
                app:layout_constraintTop_toTopOf="@id/Pilihan1"
                app:layout_constraintEnd_toEndOf="@id/Pilihan1"
                app:layout_constraintStart_toStartOf="@id/Pilihan1"
                app:layout_constraintBottom_toBottomOf="@id/Pilihan1"/>

            <TextView
                android:id="@+id/TanggalLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textColor="@color/baseblack"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/image3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_3574"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TanggalLahir"
                android:layout_marginTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit4"
                android:text="21 April 2003"
                android:textSize="14dp"
                android:textColor="@color/baseblack"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toTopOf="@id/image4"
                app:layout_constraintStart_toStartOf="@id/image4"
                android:backgroundTint="@color/white"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Pilihan2"
                android:src="@drawable/rectangle_3585"
                app:layout_constraintTop_toTopOf="@id/image4"
                app:layout_constraintEnd_toEndOf="@id/image4"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ceklisBawah2"
                android:src="@drawable/dow"
                app:layout_constraintTop_toTopOf="@id/Pilihan2"
                app:layout_constraintEnd_toEndOf="@id/Pilihan2"
                app:layout_constraintStart_toStartOf="@id/Pilihan2"
                app:layout_constraintBottom_toBottomOf="@id/Pilihan2"/>

            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/baseblack"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/image4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_3574"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Email"
                android:layout_marginTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit5"
                android:text="bagasbagas@gmail.com"
                android:textSize="14dp"
                android:textColor="@color/baseblack"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toTopOf="@id/image5"
                app:layout_constraintStart_toStartOf="@id/image5"
                android:backgroundTint="@color/white"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Checked1"
                android:src="@drawable/checked_icon_uia"
                app:layout_constraintTop_toTopOf="@id/image5"
                app:layout_constraintEnd_toEndOf="@id/image5"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                app:tint="@color/PrimaryGreen" />


            <TextView
                android:id="@+id/KataSandii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kata Sandi"
                android:textColor="@color/baseblack"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/image5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/image6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_3574"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/KataSandii"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit6"
                android:text="***********"
                android:inputType="textPassword"
                android:textSize="14dp"
                android:textColor="@color/baseblack"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toTopOf="@id/image6"
                app:layout_constraintStart_toStartOf="@id/image6"
                android:backgroundTint="@color/white"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"/>








        </androidx.constraintlayout.widget.ConstraintLayout>









    </ScrollView>






    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_bawah"
        android:layout_width="match_parent"
        android:layout_height="85sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/rec_lanjut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rec_lanjut"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cons_bawah">

        </ImageView>

        <TextView
            android:id="@+id/text_lanjut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/rec_lanjut"
            app:layout_constraintEnd_toEndOf="@+id/rec_lanjut"
            app:layout_constraintStart_toStartOf="@id/rec_lanjut"
            app:layout_constraintTop_toTopOf="@id/rec_lanjut" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>